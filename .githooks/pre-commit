#!/bin/bash
# Pre-commit hook for Warren
# Runs before every commit to ensure code quality

set -e

echo "🔍 Running pre-commit checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# 1. Format check
echo "📝 Checking code formatting..."
UNFORMATTED=$(gofmt -l .)
if [ -n "$UNFORMATTED" ]; then
    echo -e "${RED}❌ Code needs formatting:${NC}"
    echo "$UNFORMATTED"
    echo ""
    echo -e "${YELLOW}Run: go fmt ./...${NC}"
    FAILED=1
else
    echo -e "${GREEN}✓ All files properly formatted${NC}"
fi
echo ""

# 2. Lint
echo "🔎 Running linter..."
if ! golangci-lint run --timeout=3m; then
    echo -e "${RED}❌ Linting failed${NC}"
    echo -e "${YELLOW}Fix linting issues or use --no-verify to skip${NC}"
    FAILED=1
else
    echo -e "${GREEN}✓ Linting passed${NC}"
fi
echo ""

# 3. Tests
echo "🧪 Running tests..."
if ! go test ./...; then
    echo -e "${RED}❌ Tests failed${NC}"
    echo -e "${YELLOW}Fix failing tests or use --no-verify to skip${NC}"
    FAILED=1
else
    echo -e "${GREEN}✓ All tests passed${NC}"
fi
echo ""

# Final result
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${RED}❌ Pre-commit checks failed${NC}"
    echo -e "${RED}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    echo "To skip these checks (not recommended), use:"
    echo "  git commit --no-verify"
    exit 1
fi

echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}✅ All pre-commit checks passed!${NC}"
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""
exit 0
